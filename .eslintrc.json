{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:sonarjs/recommended"
  ],
  "plugins": ["sonarjs"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-var": ["error"],
    "indent": [ "error", 2],
    "semi": ["error", "always"],
    "quotes": ["error", "single"]
  }
}